<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dikaya.mobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        //1.
        <activity android:name=".LessonLayout.RelativeLayoutActivity">
            // Для запуска android RELATIV_Layout
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LessonLayout.TableLayoutActivity"
            android:label="@string/title_activity_table_layout"
            android:theme="@style/AppTheme.NoActionBar">
            // Для запуска android TableLayoutActivity
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LessonLayout.ScrollLayoutView"
            android:label="@string/title_activity_scroll_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <action android:name="android.intent.action.LAUNCHER" />
        </intent-filter>
    </application>

</manifest>